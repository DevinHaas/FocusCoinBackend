generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserSubscription {
  STARTER
  PREMIUM
}

enum SessionState {
  WAITING
  RUNNING
  PAUSE
  CANCELLED
  PENDING
  FINISHED
}

model User {
  id               Int              @id @default(autoincrement())
  clerk_id         String           @unique
  focuscoins       BigInt
  subscription     UserSubscription @default(STARTER)
  session_settings Json
  focus_sessions   FocusSession[]   @relation(name: "UserFocusSessions")
}

model FocusSession {
  id               Int          @id @default(autoincrement())
  user             User         @relation(fields: [user_id], references: [id], name: "UserFocusSessions")
  user_id          Int
  session_settings Json
  reward           BigInt
  state            SessionState
  startedAt        DateTime
  endedAt          DateTime
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}
